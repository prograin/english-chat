{
  "compilerOptions": {
    "checkJs": false,
    "allowJs": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "src/*": ["*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
